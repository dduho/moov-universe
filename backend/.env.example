APP_NAME="Moov Money Universe"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=moov_universe
DB_USERNAME=moov_user
DB_PASSWORD=moov_password

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Configuration email - Brevo (Production) / Mailpit (Développement)
# Pour Brevo: voir CONFIGURATION_BREVO.md pour les instructions complètes
MAIL_MAILER=smtp
MAIL_HOST=smtp-relay.brevo.com  # ou mailpit pour dev local
MAIL_PORT=587  # 587 (TLS) ou 465 (SSL) pour Brevo / 1025 pour Mailpit
MAIL_USERNAME=your-brevo-email@example.com  # Votre email de connexion Brevo
MAIL_PASSWORD=your_brevo_smtp_key  # Clé SMTP générée depuis Brevo (pas votre mot de passe)
MAIL_ENCRYPTION=tls  # tls ou ssl pour Brevo / null pour Mailpit
MAIL_FROM_ADDRESS="noreply@moov.tg"
MAIL_FROM_NAME="${APP_NAME}"
MAIL_NOTIFICATIONS_ENABLED=true  # Active/désactive les notifications email

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

SANCTUM_STATEFUL_DOMAINS=localhost:5173,localhost:3000
SESSION_DOMAIN=localhost
FRONTEND_URL=http://localhost:5173
